<h1><%= @restaurant.name %></h1><br>
<p><%= @restaurant.address %></p><br>
<p><%= @restaurant.category %></p><br>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<%= link_to 'Delete this restaurant', restaurant_path(@restaurant), method: :delete %> <br>
<%= link_to 'Back to list', restaurants_path %>
